    <script>
        document.getElementById('buy-button').addEventListener('click', function() {
            let nama = document.getElementById('nama').value;
            let wa = document.getElementById('wa').value;
            let email = document.getElementById('email').value;
            
            if (!nama || !wa || !email) {
                alert("Harap isi semua data terlebih dahulu.");
                return;
            }
            
            let waMessage = `Halo, saya ingin membeli produk!%0A\nNama: ${nama}%0AWhatsApp: ${wa}%0AEmail: ${email}%0AProduk: Printable Worksheet%0A\nTerima kasih!`;
            window.location.href = `https://api.whatsapp.com/send?phone=6283890199399&text=${waMessage}`;
        });
    </script>
